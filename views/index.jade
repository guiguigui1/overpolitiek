extends layout

block body
  
  nav.navbar.navbar-default
    div.container
      div.navbar-header
        a.navbar-brand(ui-sref="index", ng-bind="project.name")

        ul.nav.navbar-nav
          li
            a(ui-sref="beers", ui-sref-active="active") Beers

  div.container
    div.alert-wrapper
      div.alert.fade(flash-alert, active-class="in", duration="2500")
        span.alert-message {{flash.message}}

    div.view-wrapper
      div.at-view(ui-view)

